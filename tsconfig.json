{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "removeComments": true,
    "module": "esnext"
  },
  "references": [
    {
      "path": "domains/components"
    },
    {
      "path": "domains/modules"
    },
    {
      "path": "domains/types"
    }
  ],
  "include": [],
  "exclude": []
}
